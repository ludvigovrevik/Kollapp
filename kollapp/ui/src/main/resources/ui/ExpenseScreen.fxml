<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.ExpenseController">
    <children>
        <TableView fx:id="expenseTableView" layoutX="14.0" layoutY="14.0" prefHeight="300.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="descriptionColumn" prefWidth="150.0" text="Description" />
                <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
                <TableColumn fx:id="paidByColumn" prefWidth="100.0" text="Paid By" />
                <TableColumn fx:id="sharePerPersonColumn" prefWidth="100.0" text="Your Share" />
                <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
            </columns>
        </TableView>
        <Button fx:id="addExpenseButton" layoutX="14.0" layoutY="320.0" mnemonicParsing="false" onAction="#addExpense" prefHeight="26.0" prefWidth="100.0" text="Add Expense" />
        <Label fx:id="totalOwedLabel" layoutX="400.0" layoutY="320.0" text="Total Owed: $0.00" />
    </children>
</AnchorPane>
